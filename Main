
string room1Switch;


bool room1Loop = true;



//alle Objekter der skal laves til at starte med

//Rooms
Room Room1 = new Room("1","Room1", "Velkommen til det første rum. Dette rum repræsentere sæson 1. Du er på et fly. Det ret stort. Du kigger rundt og får øje på nogle forskellige ting. " +    
    "\nEn kjole med mange blomster på, En rød bil, en lille metal ting og døren videre til næste rum.  Hvad ville du undersøge først?");

Room Room2 = new Room("2", "Room2", "Velkommen til det andet rum. Dette rum repræsentere sæson 2.");

