        using Spillet;

        int input,
            Id = 0;

        string roomSwitch;


        bool roomLoop = true;


//ArraysItems






//alle Objekter der skal laves til at starte med






//Items Hints
Item Hints = new Item("Hints", "Hints kan du bruge i quizen.", 2);

        Item SkyeChip = new Item("SkyeHint", "Efter næmmere kig kan du se at det er skyes chip med hendes liv på. Den skænker dig et hint." +
            "\n" + Hints.ItemDescription, 1);


        //Item Quiz
        

        Item Kjole = new Item("RainaKjole", "Du tager nogle skidt hen mod kjolen. Hvor du opdager at det Rainas kjole. Problemmet er at ud af kjolen kommer et monster med spørgsmål.", 0);

        Item Obelisk = new Item("Obelisk", "", 0);



//List over Items
List<Item> currentItem = new List<Item>();
currentItem.Add(Hints);
currentItem.Add(SkyeChip);
currentItem.Add(Kjole);
currentItem.Add(Obelisk);


Room currentRoom = rooms[Id];


Console.Clear();
        Console.WriteLine("Velkommen til mit spil. Håber du har styr på S.H.I.E.L.D. ellers bliver det måske ikke så sjovt");

        do
        {
            
            Console.WriteLine(currentRoom.RoomDescription);
            roomSwitch = Console.ReadLine();
            Console.Clear();
            int.TryParse(roomSwitch, out input);
            Console.WriteLine(currentRoom.Actions[input--]);
            




            switch (roomSwitch)
            {

                case "1":
                    {
                
                        Console.ReadKey();
                        break;
                    }

                case "2":
                    {
                        Console.WriteLine(SkyeChip.ItemDescription);
                        Hints.FindHints(SkyeChip.UsesLeft);
                        Console.ReadKey();
                        break;
                    }
                //Lola
                case "3":
                    {

                        Console.ReadKey();
                        break;
                    }
                //Dør
                case "4":
                    {
                        
                        Console.ReadKey();
                        break;
                    }
                default:
                    {
                        Console.WriteLine("Der er sket en fejl. Tryk enter og prøv venligst igen");
                        Console.ReadKey();
                        Console.Clear();
                        break;
                    }
            }

        

        
        
}
        while (roomLoop);





        

Console.ReadKey();

