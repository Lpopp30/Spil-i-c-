Room Room5 = new Room("5", "Room5", "Velkommen til det femte rum. Dette rum repræsentere sæson 5.");

Room Room6 = new Room("6", "Room6", "Velkommen til det sjette rum. Dette rum repræsentere sæson 6.");

Room Room7 = new Room("7", "Room7", "Velkommen til det syvende rum. Dette rum repræsentere sæson 7.");




//Items Hints
Item Hints = new Item("Hints", "Hints kan du bruge i quizen.", 2);

Item SkyeChip = new Item("SkyeHint", "Efter næmmere kig kan du se at det er skyes chip med hendes liv på. Den skænker dig et hint." +
    "\n" + Hints.ItemDescription, 1);


//Item Quiz
Item Obelisk = new Item("Obelisk", "", 0);

Item Kjole = new Item("RainaKjole", "When did we first meet her?What was she called?", 0);
Room QuizRoom = new Room("Quiz", "QuizRoom", "Du tager nogle skidt hen mod kjolen. Hvor du opdager at det Rainas kjole. Problemmet er at ud af kjolen kommer et monster med spørgsmål.");

Console.Clear();
Console.WriteLine("Velkommen til mit spil. Håber du har styr på S.H.I.E.L.D. ellers bliver det måske ikke så sjovt");

do
{
    
    Console.WriteLine(Room1.RoomDescription);
    room1Switch = Console.ReadLine();

    Console.Clear();

    switch (room1Switch)
    {
        
        case "1":
            {
                Console.WriteLine(QuizRoom.RoomDescription);
                QuizRoom.MiniQuiz("",Kjole.ItemDescription);
                Console.ReadKey();
                break;
            }
            
        case "2":
            {
                Console.WriteLine(SkyeChip.ItemDescription);
                Hints.FindHints(SkyeChip.UsesLeft);
                Console.ReadKey();
                break;
            }
            //Lola
        case "3":
            {

                Console.ReadKey();
                break;
            }
        default:
            {
                Console.WriteLine("Der sket en fejl. Tryk enter og prøv venligst igen");
                Console.ReadKey();
                Console.Clear();
                break;
            }
    }
}
while (room1Loop);




Console.ReadKey();

public class Room
{
    public string RoomId { get; set; }
    public string RoomName { get; set; }
    public string RoomDescription { get; set; }


    public Room(string roomId, string roomName, string roomDescription)
    {
        RoomId = roomId;
        RoomName = roomName;
        RoomDescription = roomDescription;
    }




    public void MiniQuiz( string Svar, string quizSpørgsmål)
    {
        bool QuizLoop = true;
        do
        {

            Console.WriteLine(quizSpørgsmål.Substring(0, quizSpørgsmål.IndexOf("?")));
            string svar = Console.ReadLine();
            if (svar == Svar)
            {
                Console.WriteLine("Det var rigtigt");
                quizSpørgsmål = quizSpørgsmål.Remove(0, (quizSpørgsmål.IndexOf("?")+1));
                if (quizSpørgsmål.Length == 0)
                {
                    QuizLoop = false;
                }
            }
            else
            {
                Console.WriteLine("Det er forkert");
            }


        }
        while (QuizLoop);
    }

}

public static class Players
{
    public static double Lives {  get; set; }

    static Players()
    {
        Lives = 100;

    }

}

public class Item
{

    public string ItemName { get; set; }
    public string ItemDescription { get; set; }
    public int UsesLeft { get; set; }

    public Item(string itemName, string itemDescription, int usesLeft) 
    { 
        ItemName = itemName;
        ItemDescription = itemDescription;
        UsesLeft = usesLeft;

    }

    public void UseHints(int usesLeft)
    {
        UsesLeft -= usesLeft;
        Console.WriteLine("Du har i alt: " + UsesLeft + " Hints");

    }
    public void FindHints(int usesLeft)
    {
        UsesLeft += usesLeft;
        Console.WriteLine("Du har i alt: " + UsesLeft + " Hints");
    }


}

 class Weapon : Item
{

    public string WeaponName { get; set; }
    public string WeaponDescription { get; set; }

    public Weapon(string weaponName, string weaponDescription, int usesLeft) : base(weaponName, weaponDescription, usesLeft) 
    {

    }

}

