using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Spillet
{

    public class Item : Action
    {

        public string ItemName { get; set; }
        public int UsesLeft { get; set; }
        public int usesLeft { get; set; }

        public Item(string itemName, int usesLeft, int id, string description) : base(id, description)
        {
            {
                ItemName = itemName;
                UsesLeft = usesLeft;

            }

        }

        public override void Execute()
        {
            
            UsesLeft += usesLeft;
            Console.WriteLine("Du har i alt: " + UsesLeft + " Hints");
        }
    }
}


    

